<?xml version="1.0" encoding="UTF-8" ?> 

<!DOCTYPE tiles-definitions PUBLIC 
"-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN" 
"http://tiles.apache.org/dtds/tiles-config_2_0.dtd"> 

<tiles-definitions> 

  <definition name="default.login" template="/WEB-INF/pages/user/login.jsp">
  </definition>
  
  <definition name="default.layout" template="/WEB-INF/pages/layout.jsp">
  	<put-attribute name="main" value="/WEB-INF/pages/main.jsp" />
  	<put-attribute name="left" value="/WEB-INF/pages/left.jsp" />
  	<put-attribute name="foot" value="/WEB-INF/pages/foot.jsp" />
  	<put-attribute name="head" value="/WEB-INF/pages/head.jsp" />
  </definition>

  <definition name="*.*.do" extends="default.layout" >
    <put-attribute name="main" value="/WEB-INF/pages/{1}/{1}_{2}.jsp" />
  </definition>
  
  <definition name="*.*" template="/WEB-INF/pages/error.jsp">
  </definition>
   
</tiles-definitions>